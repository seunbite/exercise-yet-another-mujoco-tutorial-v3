<mujoco model="obj_head">
    <asset>
        <material name="head_mat" specular="0.5" shininess="0.5" rgba="0.8 0.8 0.8 1" />
        <mesh name="head" file="head.obj" scale="0.1 0.1 0.1" />
    </asset>
    <worldbody>
        <body name="obj_head" pos="0 0 0" euler="0 0 0">
            <joint type="free" />
            <geom type="mesh" material="head_mat" mesh="head" class="visual_collision" />
            <inertial pos="0 0 0" mass="30" diaginertia="0.1 0.1 0.1" />
            
            <!-- Target dot that can be randomly positioned -->
            <body name="target_dot" pos="0.0 0.05 0.12"> <!-- 머리 기준 상대위치 -->
                <geom type="sphere" size="0.01" rgba="1 0 0 1" mass="0.001" 
                      contype="1" conaffinity="1"/>
                <site name="target_site" size="0.015" rgba="1 0 0 0.3" />
            </body>
        </body>
    </worldbody>
</mujoco>